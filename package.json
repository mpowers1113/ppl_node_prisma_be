{
  "name": "ppl_backend",
  "version": "1.0.0",
  "description": "Backend for the PPL project",
  "main": "index.ts",
  "scripts": {
    "build": "npx tsc",
    "dev": "npx prisma generate && npx prisma db push && npx prisma db seed && concurrently \"npx tsc --watch\" \"nodemon -q server/src/index.ts\"",
    "dev:update": "npx prisma generate && concurrently \"npx tsc --watch\" \"nodemon -q src/index.ts\"",
    "lint:check": "npx eslint src/**/*.ts",
    "lint:fix": "npx eslint --fix src/**/*.ts",
    "prettier:check": "npx prettier --check .",
    "prettier:write": "npx prettier --write .",
    "prisma:format": "prisma format",
    "prisma:generate": "prisma generate",
    "prisma:generate:watch": "prisma generate --watch",
    "prisma:migrate": "prisma migrate dev --skip-seed",
    "prisma:reset": "prisma migrate reset",
    "prisma:seed": "prisma db seed --preview-feature",
    "prisma:studio": "prisma studio",
    "start": "node dist/src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "argon2": "^0.30.3",
    "body-parser": "^1.20.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-jwt": "^8.3.0",
    "express-rate-limit": "^6.7.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pg-pool": "^3.6.1",
    "prettier-plugin-packagejson": "^2.3.0",
    "slugify": "^1.6.0",
    "swagger-jsdoc": "^6.2.7",
    "swagger-ui-express": "^4.6.0",
    "zod-express-middleware": "^1.4.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.17",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^4.0.0",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/morgan": "^1.9.4",
    "@types/node": "^15.14.9",
    "@types/pg-pool": "^2.0.3",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "jest": "^29.3.1",
    "jest-mock-extended": "^2.0.4",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "prettier-plugin-prisma": "^4.8.0",
    "prisma": "^5.0.0",
    "ts-node": "^10.9.1",
    "ts-to-zod": "^1.13.1",
    "typescript": "^4.9.5",
    "zod": "^3.20.2"
  },
  "prisma":{
    "seed":"ts-node prisma/seed.ts"
  },
  "lint-staged": {
    "*.ts": [
      "npm run prisma:format",
      "npm run lint:fix",
      "npm run prettier:write",
      "git add"
    ]
  }
}
