{
  "name": "ppl_backend",
  "version": "1.0.0",
  "description": "Backend for the PPL project",
  "main": "index.ts",
  "scripts": {
    "build": "npx tsc",
    "dev": "npx prisma generate && npx prisma db push --accept-data-loss && npx prisma db seed && concurrently \"npx tsc --watch\" \"nodemon -q server/src/index.ts\"",
    "dev:update": "npx prisma generate && concurrently \"npx tsc --watch\" \"nodemon -q src/index.ts\"",
    "lint:check": "npx eslint src/**/*.ts",
    "lint:fix": "npx eslint --fix src/**/*.ts",
    "prettier:check": "npx prettier --check .",
    "prettier:write": "npx prettier --write .",
    "prisma:format": "prisma format",
    "prisma:generate": "prisma generate",
    "prisma:generate:watch": "prisma generate --watch",
    "prisma:migrate": "prisma migrate dev --skip-seed",
    "prisma:reset": "prisma migrate reset",
    "prisma:seed": "prisma db seed --preview-feature",
    "prisma:studio": "prisma studio",
    "start": "node dist/src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:client": "tsx server/src/client.ts"
  },
  "lint-staged": {
    "*.ts": [
      "npm run prisma:format",
      "npm run lint:fix",
      "npm run prettier:write",
      "git add"
    ]
  },
  "dependencies": {
    "@koa/bodyparser": "^5.0.0",
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@prisma/client": "^5.0.0",
    "@types/koa": "^2.13.8",
    "@types/uuid": "^9.0.2",
    "cors": "^2.8.5",
    "ioredis": "^5.3.2",
    "koa": "^2.14.2",
    "koa-helmet": "^7.0.2",
    "koa-morgan": "^1.0.1",
    "koa-ratelimit": "^5.0.1",
    "koa-response-time": "^2.1.0",
    "pg-pool": "^3.6.1",
    "prettier-plugin-packagejson": "^2.3.0",
    "slugify": "^1.6.0",
    "swagger-jsdoc": "^6.2.7",
    "swagger-ui-express": "^4.6.0",
    "tsx": "^3.12.7",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cron": "^1.7.3",
    "@types/ioredis": "^5.0.0",
    "@types/koa__cors": "^4.0.0",
    "@types/koa__router": "^12.0.0",
    "@types/koa-morgan": "^1.0.5",
    "@types/koa-ratelimit": "^5.0.1",
    "@types/node": "^15.14.9",
    "@types/pg-pool": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "jest": "^29.3.1",
    "jest-mock-extended": "^2.0.4",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "prettier-plugin-prisma": "^4.8.0",
    "prisma": "^5.0.0",
    "ts-node": "^10.9.1",
    "ts-to-zod": "^1.13.1",
    "typescript": "^4.9.5",
    "zod": "^3.20.2"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
